{
	"name": "menn-stack-boilerplate",
	"version": "1.0.0",
	"description": "MENN Stack (MongoDB + Express + Next.js + Node.js) boilerplate with TypeScript",
	"private": true,
	"engines": {
		"node": ">=20.0.0",
		"npm": ">=10.0.0"
	},
	"workspaces": [
		"frontend",
		"backend"
	],
	"scripts": {
		"pretest": "bash setup.sh && npm run install:all",
		"prestart": "bash setup.sh && npm run install:all",
		"install:all": "npm install",
		"dev": "concurrently \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
		"dev:frontend": "npm run dev --workspace=frontend",
		"dev:backend": "npm run dev --workspace=backend",
		"build": "npm run build --workspace=backend && npm run build --workspace=frontend",
		"build:frontend": "npm run build --workspace=frontend",
		"build:backend": "npm run build --workspace=backend",
		"test": "npm run test:backend && npm run test:frontend && npm run test:merge",
		"test:backend": "npm test --workspace=backend",
		"test:frontend": "npm test --workspace=frontend",
		"test:merge": "node scripts/merge-junit.js",
		"lint": "npm run lint --workspaces",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,html,css,scss}\"",
		"typesync": "typesync"
	},
	"devDependencies": {
		"concurrently": "^8.2.2",
		"eslint-plugin-prettier": "^5.5.1",
		"jest-junit": "^16.0.0",
		"prettier": "^3.6.2",
		"typescript-eslint": "^8.34.1",
		"typesync": "^0.14.3"
	}
}
